<div class="container">
  <h1><%= @list.name %> <%= link_to "Delete", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h1>

  <% @list.bookmarks.each do |bookmark| %>
    <p><%= bookmark.movie.title %> - <%= bookmark.comment %> <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </p>
  <% end %>

    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit %>
    <% end %>

</div>
